        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s;
        display: inline-block;
      }

      .chat-unauthenticated .login-btn {
        background-color: #2d5016;
        color: white;
      }

      .chat-unauthenticated .login-btn:hover {
        background-color: #4a7c1e;
        transform: translateY(-2px);
      }

      .chat-unauthenticated .register-btn {
        background-color: #ff9900;
        color: #000;
      }

      .chat-unauthenticated .register-btn:hover {
        background-color: #ffb84d;
        transform: translateY(-2px);
      }

      #chat {
        display: none;
      }

      #chat.active {
        display: block;
      }

      #messages {
        list-style: none;
        height: 300px;
        overflow-y: auto;
        border: 1px solid #ddd;
        padding: 15px;
        margin-bottom: 20px;
        background-color: #f9f9f9;
        border-radius: 4px;
      }

      #messages li {
        margin-bottom: 12px;
        padding: 10px;
        background: white;
        border-radius: 4px;
        font-size: 14px;
        border-left: 3px solid #4a7c1e;
      }

      #formChat {
        display: flex;
        gap: 10px;
      }

      #inputMsg {
        flex: 1;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 14px;
        font-family: inherit;
      }

      #inputMsg:focus {
        outline: none;
        border-color: #4a7c1e;
        box-shadow: 0 0 0 3px rgba(74, 124, 30, 0.1);
      }

      #formChat button {
        padding: 12px 25px;
        background: #4a7c1e;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s;
      }

      #formChat button:hover {
        background: #2d5016;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(74, 124, 30, 0.3);
      }

      /* Footer */
      footer {
        background: #2d5016;
        color: white;
        text-align: center;
        padding: 30px;
        margin-top: 60px;
      }

      footer p {
        font-size: 14px;
      }

      /* Responsive */
      @media (max-width: 768px) {
        header .container {
          flex-direction: column;
          gap: 20px;
          text-align: center;
        }

        header h1 {
