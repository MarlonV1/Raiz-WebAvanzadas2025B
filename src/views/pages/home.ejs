        background-color: #f5f5f5;
        color: #333;
      }

      /* Header styles are centralized in /public/css/site.css */

      /* Main Container */
      main {
        min-height: calc(100vh - 200px);
      }

      .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 20px;
      }

      /* Hero Banner */
      .hero {
        background: linear-gradient(135deg, #4a7c1e 0%, #2d5016 100%);
        color: white;
        padding: 40px 20px;
        text-align: center;
        margin-bottom: 40px;
        border-radius: 8px;
        margin-top: 8px;
      }

      .hero h2 {
