        font-weight: 700;
        letter-spacing: 1px;
      }

      header nav {
        display: flex;
        gap: 25px;
        align-items: center;
      }

      header nav a,
      header nav span {
        color: white;
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        transition: opacity 0.3s;
        cursor: pointer;
      }

      header nav a:hover {
        opacity: 0.85;
      }

      header nav span {
        background: rgba(255, 255, 255, 0.2);
        padding: 8px 15px;
        border-radius: 4px;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
