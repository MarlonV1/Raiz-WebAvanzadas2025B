        opacity: 0.95;
      }

      .hero .cta-buttons {
        display: flex;
        gap: 15px;
        justify-content: center;
        flex-wrap: wrap;
      }

      .cta-button {
        padding: 12px 30px;
        font-size: 16px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s;
        text-decoration: none;
        display: inline-block;
      }

      .cta-button.primary {
        background-color: #ff9900;
        color: #000;
      }

      .cta-button.primary:hover {
        background-color: #ffb84d;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(255, 153, 0, 0.3);
      }

      .cta-button.secondary {
        background-color: rgba(255, 255, 255, 0.2);
        color: white;
        border: 2px solid white;
      }

      .cta-button.secondary:hover {
        background-color: rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
      }

      /* Features Grid */
      .features-section {
        margin: 60px 0;
      }

      .features-section h3 {
        font-size: 32px;
        margin-bottom: 40px;
        text-align: center;
        color: #2d5016;
      }

      .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 30px;
        margin-bottom: 60px;
      }

      .feature-card {
